{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "no-console": "error",
        "curly": ["error", "all"],
        "prefer-arrow-callback": "error",
        "one-var": ["error", "never"],
        "no-var": "error",
        "prefer-const": "error",
        "object-shorthand": "error",
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "prefer-template": "error"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
