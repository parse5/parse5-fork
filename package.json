{
    "name": "@parse5/build-scripts",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*",
        "bench"
    ],
    "devDependencies": {
        "@types/dedent": "^0.7.0",
        "@types/jest": "^27.0.3",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.6.0",
        "dedent": "^0.7.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-unicorn": "^39.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.3",
        "lerna": "^4.0.0",
        "lint-staged": "^11.2.6",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.2"
    },
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "prettier": "prettier '**/*.{js,ts,md,json,yml}'",
        "format": "npm run format:es && npm run format:prettier",
        "format:es": "npm run lint:es -- --fix",
        "format:prettier": "npm run prettier -- --write",
        "lint": "npm run lint:es && npm run lint:prettier",
        "lint:es": "eslint .",
        "lint:prettier": "npm run prettier -- --check",
        "unit-tests": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test": "npm run lint && npm run unit-tests",
        "generate-feedback-tests": "node --loader ts-node/esm scripts/generate-parser-feedback-test/index.ts packages/test-utils/data/html5lib-tests/tree-construction/*.dat test/data/tree-construction-regression/*.dat",
        "bench-perf": "cd bench && npm install && node perf/index.js",
        "bench-memory-sax": "cd bench && npm install && node memory/sax-parser.js",
        "preversion": "npm test",
        "pre-commit": "lint-staged",
        "publish": "lerna publish",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{md,json,yml}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts-esm",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "testEnvironment": "node",
        "coverageProvider": "v8",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "^(.*)\\.js$": "$1"
        }
    }
}
